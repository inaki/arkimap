// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  firstName String?
  lastName  String?
  role      Role     @default(USER)
  password  String
}

model Architect {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  published Boolean   @default(false)
  firstName String
  lastName  String
  country   String
  gender    String
  dob       DateTime
  biography String
  projects  Project[]
}

model Project {
  id          String    @id @default(uuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  description String
  name        String
  longitude   Float
  latitude    Float
  year        Int
  published   Boolean   @default(false)
  city        City      @relation(fields: [cityId], references: [id])
  cityId      String
  belongsToId String
  belongsTo   Architect @relation(fields: [belongsToId], references: [id])

  @@unique([id, belongsToId])
}

model City {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  name      String
  country   String
  latitude  Float
  longitude Float
  Project   Project[]
}

enum Role {
  USER
  ADMIN
}
